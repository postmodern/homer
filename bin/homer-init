#!/bin/zsh
#
# Copy home directory template files to the user's home directory and
# initialize it as a Git repository.

if [[ -e "$HOME/.git" ]]; then;
  echo "There is already an existing repo in your home dir."
else
  cp -a /usr/local/share/homer $HOME
  git init $HOME
  echo "Your home directory has been initialized with Homer."
fi
