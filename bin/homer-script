#!/bin/zsh
#
# Copy a script to your $PATH

script=$2

zparseopts -K -- m:=message r:=remove

if [ -n "${remove+x}" ]; then
  action='Remove'
else
  action='Add'
fi

if [[ -z $message ]]; then
  message="${action} script ${plugin}"
fi

case "$action" in
  Add)
    rm $HOME/bin/$script
    homer_remove bin/$script $message
    ;;
  Remove)
    scriptname=$(basename $script)
    cp $script $HOME/bin/$scriptname
    homer_add bin/$scriptname -m $message
    ;;
esac
