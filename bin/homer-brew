#!/bin/zsh
#
# Homebrew bundle installer.

source "$HOMER_PATH/share/homer/cli.zsh"

if [ -z $2 ]; then
  homer_brew
else
  kind=$2
  name=$3
  config=$HOMER_HOME/etc/brew/${kind}s
  zparseopts -K -- m:=message

  echo "$name" >> $config
  homer_brew $kind

  if [ -z $message ]; then
    message="Added $name to Homebrew ${kind}s"
  fi

  homer_add $config $message
fi
