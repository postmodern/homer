#!/bin/zsh
#
# Upgrade your home dir with the new templates.

cp -a $HOMER_PATH/templates/** $HOME

zparseopts -K -- m:=message c:=commit p:=package

if [ -n "${package+x}" ]; then
  brew update && brew upgrade homer
fi

if [ -n "${remove+x}" ]; then
  if [[ -z $message ]]; then
    message="Upgraded Homer to ${HOMER_VERSION}"
  fi

  homer_commit_all $message
fi
