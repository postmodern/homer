#!/bin/zsh
#
# Executes Homer commands

if [[ -z $HOMER_PREFIX ]]; then
  HOMER_PREFIX=$(brew --prefix homer)
fi
HOMER_COMMAND=$1
HOMER_EXECUTABLE=$HOMER_PREFIX/bin/homer-$HOMER_COMMAND

if [[ -e $HOMER_EXECUTABLE ]]; then
  $HOMER_EXECUTABLE
else
  echo "not found: $HOMER_EXECUTABLE"
  echo "
  Homer, your home directory manager. <http://tubbo.github.io/homer>

  Usage: homer COMMAND [ARGUMENTS]

  For more information, please type 'man homer'

  Commands: init, load, save, alias, script, plugin, update
"
fi
