#!/bin/zsh
#
# Executes Homer commands

case $0 in
 /*) HOMER_SCRIPT_FILE=$0;;
  *) HOMER_SCRIPT_FILE=$PWD/$0;;
esac

HOMER_SCRIPT_PATH=$(dirname $HOMER_SCRIPT_FILE)
HOMER_PATH=$HOMER_SCRIPT_PATH/..
HOMER_COMMAND=$1
HOMER_EXECUTABLE=$HOMER_SCRIPT_PATH/homer-$HOMER_COMMAND

if [[ -e $HOMER_EXECUTABLE ]]; then
  $HOMER_EXECUTABLE $*
else
  $HOMER_SCRIPT_PATH/homer-help
fi
